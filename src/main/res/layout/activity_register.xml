<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="tvLoginRegister"
                app:layout_scrollFlags="scroll|enterAlways"
                app:title="注册账号"
                app:titleTextColor="@color/cpb_white" />

        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="三步轻松快速注册，"
                    android:textColor="#666" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_register_step_one"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:background="@drawable/vector_register_step_selected"
                            android:gravity="center"
                            android:text="第一步"
                            android:textColor="#fff"
                            android:textSize="12sp" />

                        <View
                            android:id="@+id/line_register_one"
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_weight="1"
                            android:background="#999" />

                        <TextView
                            android:id="@+id/tv_register_step_two"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:background="@drawable/vector_register_step_unselected"
                            android:gravity="center"
                            android:text="第二步"
                            android:textColor="#fff"
                            android:textSize="12sp" />

                        <View
                            android:id="@+id/line_register_two"
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_weight="1"
                            android:background="#999" />

                        <TextView
                            android:id="@+id/tv_register_step_three"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:background="@drawable/vector_register_step_unselected"
                            android:gravity="center"
                            android:text="第三步"
                            android:textColor="#fff"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_register_step_one"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/ic_launcher"
                            android:visibility="invisible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/iv_register_step_two"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/ic_launcher"
                            android:visibility="invisible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <ImageView
